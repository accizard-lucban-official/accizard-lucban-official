// Firebase Storage Security Rules
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ========================================
    // HELPER FUNCTIONS
    // ========================================
    function isAuthenticated() { return request.auth != null; }
    function isValidSize() { return request.resource.size < 25 * 1024 * 1024; } // 25MB
    function isImage() { return request.resource.contentType.matches('image/.*'); }
    function isDocument() {
      return request.resource.contentType.matches('application/pdf') ||
             request.resource.contentType.matches('application/msword') ||
             request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.wordprocessingml.document');
    }
    function isVideo() { return request.resource.contentType.matches('video/.*'); }
    function isAudio() { return request.resource.contentType.matches('audio/.*'); }

    // ========================================
    // EXISTING RULES (PRESERVED)
    // ========================================
    match /news.json {
      allow read: if true;
      allow write: if false;
    }

    match /accizard-uploads/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /profile-picture/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /profile_pictures/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /report_images/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /valid_ids/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Chat attachments
    match /chat_attachments/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() &&
                      (isImage() || isDocument() || isVideo() || isAudio()) &&
                      isValidSize();
      allow delete: if isAuthenticated();
    }

    // Optional enhanced paths
    match /profile-pictures-web/{userId}/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isValidSize();
    }

    match /validIds/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isImage() && isValidSize();
    }

    match /announcements/{announcementId}/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && (isImage() || isDocument()) && isValidSize();
      allow delete: if isAuthenticated();
    }

    match /reports/{reportId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (isImage() || isDocument()) && isValidSize();
      allow delete: if isAuthenticated();
    }

    match /documents/{userId}/{documentType}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isDocument() && isValidSize();
    }

    // ========================================
    // CUSTOM EMERGENCY CONTACT PHOTOS (ADDED)
    // Path your app uses: custom_emergency_contacts/{contactId}.jpg
    // ========================================
    match /custom_emergency_contacts/{fileName} {
      allow read: if true; // public read so images always load via download URL
      allow write: if isAuthenticated() && isImage() && isValidSize();
      allow delete: if isAuthenticated();
    }
    
    match /user_emergency_contacts/{userId}/{fileName} {
  // Owner-only access
  allow read: if request.auth != null && request.auth.uid == userId;
  allow write: if request.auth != null && request.auth.uid == userId && request.resource.contentType.matches('image/.*') && request.resource.size < 25 * 1024 * 1024;
  allow delete: if request.auth != null && request.auth.uid == userId;
}

    // ========================================
    // DEFAULT: DENY ALL OTHER ACCESS
    // ========================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}