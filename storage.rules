// Firebase Storage Security Rules
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ========================================
    // HELPER FUNCTIONS
    // ========================================
    function isAuthenticated() { return request.auth != null; }
    function isValidSize() { return request.resource.size < 25 * 1024 * 1024; } // 25MB
    function isImage() { return request.resource.contentType.matches('image/.*'); }
    function isDocument() {
      return request.resource.contentType.matches('application/pdf') ||
             request.resource.contentType.matches('application/msword') ||
             request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.wordprocessingml.document');
    }
    function isVideo() { return request.resource.contentType.matches('video/.*'); }
    function isAudio() { return request.resource.contentType.matches('audio/.*'); }
    
    // Note: Storage rules cannot directly access Firestore permissions
    // Permission checks are handled at the application level (UI disabling buttons)
    // These rules allow authenticated users to upload files
    // Regular admins without Firebase Auth may need public write access for some paths

    // ========================================
    // EXISTING RULES (PRESERVED)
    // ========================================
    match /news.json {
      allow read: if true;
      allow write: if false;
    }

    match /accizard-uploads/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /profile-picture/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isValidSize();
      allow delete: if isAuthenticated();
    }

    match /profile_pictures/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isValidSize();
      allow delete: if isAuthenticated();
    }

    match /report_images/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && (isImage() || isVideo()) && isValidSize();
      allow delete: if isAuthenticated();
    }

    match /valid_ids/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isValidSize();
      allow delete: if isAuthenticated();
    }

    // Chat attachments
    match /chat_attachments/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() &&
                      (isImage() || isDocument() || isVideo() || isAudio()) &&
                      isValidSize();
      allow delete: if isAuthenticated();
    }

    match /admin_chat/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() &&
                      (isImage() || isDocument() || isVideo() || isAudio()) &&
                      isValidSize();
      allow delete: if isAuthenticated();
    }

    // Optional enhanced paths
    // Profile pictures with folder structure: profile-pictures-web/{userId}/{fileName}
    match /profile-pictures-web/{userId}/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isValidSize();
      allow delete: if isAuthenticated();
    }

    // Profile pictures with flat structure: profile-pictures-web/{fileName}
    match /profile-pictures-web/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isValidSize();
      allow delete: if isAuthenticated();
    }

    // Cover images: cover-images-web/{fileName}
    match /cover-images-web/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isValidSize();
      allow delete: if isAuthenticated();
    }

    match /validIds/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isImage() && isValidSize();
      allow delete: if isAuthenticated();
    }

    // Announcement media - authenticated users can upload
    // Permission checks (edit_announcements) are handled at application level
    match /announcements/{announcementId}/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && (isImage() || isDocument()) && isValidSize();
      allow delete: if isAuthenticated();
    }

    match /announcements/{announcementId}/media/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && (isImage() || isDocument() || isVideo() || isAudio()) && isValidSize();
      allow delete: if isAuthenticated();
    }

    // Report media - authenticated users can upload
    // Permission checks (edit_reports, delete_reports) are handled at application level
    match /reports/{reportId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (isImage() || isDocument()) && isValidSize();
      allow delete: if isAuthenticated();
    }

    match /reports/{reportId}/documents/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isDocument() && isValidSize();
      allow delete: if isAuthenticated();
    }

    match /reports/{reportId}/media/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (isImage() || isDocument() || isVideo() || isAudio()) && isValidSize();
      allow delete: if isAuthenticated();
    }

    match /documents/{userId}/{documentType}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isDocument() && isValidSize();
    }

    // ========================================
    // CUSTOM EMERGENCY CONTACT PHOTOS (ADDED)
    // Path your app uses: custom_emergency_contacts/{contactId}.jpg
    // ========================================
    match /custom_emergency_contacts/{fileName} {
      allow read: if true; // public read so images always load via download URL
      allow write: if isAuthenticated() && isImage() && isValidSize();
      allow delete: if isAuthenticated();
    }
    
    match /user_emergency_contacts/{userId}/{fileName} {
  // Owner-only access
  allow read: if request.auth != null && request.auth.uid == userId;
  allow write: if request.auth != null && request.auth.uid == userId && request.resource.contentType.matches('image/.*') && request.resource.size < 25 * 1024 * 1024;
  allow delete: if request.auth != null && request.auth.uid == userId;
}

    // ========================================
    // DEFAULT: DENY ALL OTHER ACCESS
    // ========================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}