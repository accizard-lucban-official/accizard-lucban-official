rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // HELPER FUNCTIONS
    // ========================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user is Super Admin (using exists for reliability)
    function isSuperAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/superAdmin/$(request.auth.uid));
    }
    
    // Check if user is LDRRMO Admin
    function isLDRRMOAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Check if user is any type of admin (Super Admin OR LDRRMO Admin)
    function isAdmin() {
      return isSuperAdmin() || isLDRRMOAdmin();
    }
    
    // Note: Firestore rules cannot easily check array membership for permissions
    // Granular permission checks (edit_reports, delete_reports, etc.) are handled at the application level
    // These functions check if user is an admin (super admin or LDRRMO admin)
    // Application-level checks (UI disabling buttons) enforce granular permissions
    
    // Check if admin can edit reports
    // Super admins always allowed, Firebase-authenticated admins allowed (permission checked in app)
    function canEditReports() {
      return isAdmin();
    }
    
    // Check if admin can delete reports
    function canDeleteReports() {
      return isAdmin();
    }
    
    // Check if admin can edit announcements
    function canEditAnnouncements() {
      return isAdmin();
    }
    
    // Check if admin can delete announcements
    function canDeleteAnnouncements() {
      return isAdmin();
    }
    
    // Check if admin can add placemarks
    function canAddPlacemark() {
      return isAdmin();
    }
    
    // Check if admin can edit pins
    function canEditPins() {
      return isAdmin();
    }
    
    // Check if admin can delete pins
    function canDeletePins() {
      return isAdmin();
    }
    
    // Check if admin can edit residents
    function canEditResidents() {
      return isAdmin();
    }
    
    // Check if admin can delete residents
    function canDeleteResidents() {
      return isAdmin();
    }
    
    // Note: canChangeResidentStatus is handled by canEditResidents() 
    // (changing status is just updating the user document)
    
    // Check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Check if user is suspended
    function isSuspended() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.suspended == true;
    }
    
    // ========================================
    // COLLECTIONS
    // ========================================
    
    // Super Admin collection (REQUIRED FOR LOGIN)
    match /superAdmin/{superAdminId} {
      // Allow public read access (needed for password recovery and login verification)
      // Email queries are needed for password recovery before user is authenticated
      // Also needed for login verification by email query
      allow read: if true;
      
      // Create: Only existing super admins can create new super admin accounts
      // Checks if the authenticated user is already a super admin
      allow create: if isSuperAdmin();
      
      // Update: Super admins can update any super admin profile (including their own)
      // This allows profile updates via email queries (ProfilePage, etc.)
      // Also allows updating own profile by document ID match
      allow update: if isSuperAdmin() || 
                     (isAuthenticated() && superAdminId == request.auth.uid);
      
      // Delete: Only super admins can delete super admin accounts
      // Prevent self-deletion as a security measure
      allow delete: if isSuperAdmin() && superAdminId != request.auth.uid;
    }
    
    // Admin collection (list of LDRRMO admin users)
    // Note: Regular admins use username/password (Firestore only, no Firebase Auth)
    match /admins/{adminId} {
      // Allow public read access (needed for login verification and regular admin access)
      // Username queries are needed for login verification
      allow read: if true;
      
      // Create: Only admins (super admin or regular admin) can create admin accounts
      // Since regular admins don't have Firebase Auth, we allow public create
      // Application-level checks ensure only authorized admins can create accounts
      allow create: if isAdmin() || true;
      
      // Update: Admins can update admin accounts
      // Since regular admins don't have Firebase Auth, we allow public update
      // Application-level checks ensure only authorized admins can update accounts
      allow update: if isAdmin() || true;
      
      // Delete: Admins can delete admin accounts
      // Since regular admins don't have Firebase Auth, we allow public delete
      // Application-level checks ensure only authorized admins can delete accounts
      allow delete: if isAdmin() || true;
    }
    
    // Users collection (Residents)
    match /users/{userId} {
      // Allow public read access (needed for regular Admins who don't have Firebase Auth)
      // Profile information is not highly sensitive and is needed for display purposes
      allow read: if true;
      
      // Users can create their own profile, admins with permission can create any
      // Suspended users cannot create profiles
      // Allow public create for regular admins (application-level checks ensure proper access)
      allow create: if (isAuthenticated() && 
                       !isSuspended() &&
                       request.auth.uid == request.resource.data.firebaseUid) ||
                      canEditResidents() || true;
      
      // Users can update their own profile, admins with permission can update any
      // Suspended users cannot update their profile
      // Allow public update for regular admins (application-level checks ensure proper access)
      allow update: if (!isSuspended() && isOwner(resource.data.firebaseUid)) || 
                      canEditResidents() || 
                      isAdmin() || true;
      
      // Users can delete their own account, admins with permission can delete any
      // Allow public delete for regular admins (application-level checks ensure proper access)
      allow delete: if isOwner(resource.data.firebaseUid) || 
                      canDeleteResidents() || 
                      isAdmin() || true;
    }
    
    // Reports collection
    match /reports/{reportId} {
      // Allow public read access (needed for regular Admins who don't have Firebase Auth)
      allow read: if true;
      
      // Authenticated users can create reports with their own userId
      // Suspended users cannot create reports
      // Admins with permission can also create reports
      // Allow public create for regular admins (application-level checks ensure proper access)
      allow create: if (isAuthenticated() && 
                       !isSuspended() &&
                       request.resource.data.userId == request.auth.uid) ||
                      canEditReports() || true;
      
      // Admins with edit permission can update, or allow public update (for regular admins without Firebase Auth)
      allow update: if canEditReports() || true;
      
      // Admins with delete permission can delete, or allow public delete (for regular admins without Firebase Auth)
      allow delete: if canDeleteReports() || true;
    }
    
    // Announcements collection
    match /announcements/{announcementId} {
      // Allow public read access (needed for regular Admins who don't have Firebase Auth)
      allow read: if true;
      
      // Admins with permission can create, or allow public create (for regular admins without Firebase Auth)
      allow create: if canEditAnnouncements() || true;
      
      // Admins with permission can update, or allow public update (for regular admins without Firebase Auth)
      allow update: if canEditAnnouncements() || true;
      
      // Admins with permission can delete, or allow public delete (for regular admins without Firebase Auth)
      allow delete: if canDeleteAnnouncements() || true;
    }
    
    // Announcement Types collection
    match /announcementTypes/{typeId} {
      // Allow public read access (needed for regular Admins who don't have Firebase Auth)
      allow read: if true;
      
      // Allow public write (for regular admins to manage announcement types)
      allow create, update, delete: if true;
    }
    
    // ========================================
    // CHAT MESSAGES COLLECTION (FLAT STRUCTURE)
    // ========================================
    match /chat_messages/{messageId} {
      // Allow public read access (needed for regular Admins who don't have Firebase Auth)
      allow read: if true;
      
      // Allow public write for chat messages (admins and users both need to send messages)
      // Application-level checks ensure only authorized users can send messages
      // Suspended users are blocked at application level
      allow write: if true;
    }

    // ========================================
    // ADMIN GROUP CHAT MESSAGES
    // ========================================
    match /admin_chat_messages/{messageId} {
      // Allow public read/write for regular admins (application-level checks ensure only admins can access)
      // Admin chat is for internal admin communication only
      allow read, write: if true;
    }
    
    // ========================================
    // CHAT ROOM METADATA (Optional - for tracking)
    // ========================================
    match /chats/{chatRoomId} {
      // Allow public read access (needed for regular Admins who don't have Firebase Auth)
      allow read: if true;
      
      // Allow public write for chat room metadata (admins need to update chat metadata)
      // Application-level checks ensure only authorized users can modify chat rooms
      // Users can write their own chat room metadata (handled at application level)
      allow write: if true;
    }
    
    // Report counter (for auto-incrementing report IDs)
    match /counters/{counterId} {
      // Allow public read/write (needed for regular Admins and report creation)
      allow read, write: if true;
    }
    
    // Activity Logs collection
    match /activityLogs/{logId} {
      // Allow public read/write (needed for regular Admins to view and create logs)
      allow read, write: if true;
    }
    
    // Team Members collection
    match /teamMembers/{teamId} {
      // Allow public read/write (needed for regular Admins to manage teams)
      allow read, write: if true;
    }
    
    // Admin position catalog (used in admin creation form)
    match /adminPositions/{positionId} {
      // Everyone can read available positions
      allow read: if true;
      // Allow public write for regular admins (application-level checks ensure proper access)
      allow create, update, delete: if isAdmin() || true;
    }

    // Dispatch vehicles catalog (used in report dispatch form)
    match /vehicles/{vehicleId} {
      allow read: if true;
      // Allow public write for regular admins (application-level checks ensure proper access)
      allow create, update, delete: if isAdmin() || true;
    }

    // Pins collection (Map Markers)
    // Supports report pinning flow: pins can be linked to reports via reportId field
    match /pins/{pinId} {
      // Public read access (mobile app + web app + anyone can view pins)
      // Also needed for querying pins by reportId (where("reportId", "==", reportId))
      // and batch queries (where("reportId", "in", batch))
      allow read: if true;
      
      // Create: Admins can create pins, including pins linked to reports (report pinning)
      // Since regular admins don't have Firebase Auth, we allow public create
      // Application-level checks ensure only authorized admins can create pins
      allow create: if canAddPlacemark() || true;
      
      // Update: Admins can update pins, including updating pin location when report location changes
      // Since regular admins don't have Firebase Auth, we allow public update
      // Application-level checks ensure only authorized admins can update pins
      allow update: if canEditPins() || true;
      
      // Delete: Admins can delete pins, including deletion when associated reports are deleted
      // Since regular admins don't have Firebase Auth, we allow public delete
      // Application-level checks ensure only authorized admins can delete pins
      allow delete: if canDeletePins() || true;
    }
    
    // PAGASA Bulletins collection
    match /pagasa_bulletins/{bulletinId} {
      // Public read access (anyone can view weather bulletins)
      allow read: if true;
      
      // Only Cloud Functions can write (via Admin SDK)
      allow write: if false;
    }

    // Personal Notes collection (for admins and super admins)
    match /personalNotes/{noteId} {
      // Allow public read/write (needed for regular Admins who don't have Firebase Auth)
      // Application-level filtering by username ensures users only access their own notes
      allow read, write: if true;
    }
    
    // ========================================
    // USER-SCOPED EMERGENCY CONTACTS (PER-ACCOUNT)
    // ========================================
    match /users/{userId}/emergency_contacts/{contactId} {
      // Only the owner can read (suspended users cannot read)
      allow read: if isAuthenticated() && 
                     !isSuspended() &&
                     request.auth.uid == userId;

      // Owner creates their own record; must set createdBy to their uid
      // Suspended users cannot create contacts
      allow create: if isAuthenticated()
                    && !isSuspended()
                    && request.auth.uid == userId
                    && request.resource.data.createdBy == request.auth.uid;

      // Only the owner can update/delete their own contact
      // Suspended users cannot update/delete contacts
      allow update, delete: if isAuthenticated()
                            && !isSuspended()
                            && request.auth.uid == userId
                            && resource.data.createdBy == request.auth.uid;
    }
    
    // ========================================
    // FCM TOKENS COLLECTION
    // ========================================
    match /fcmTokens/{tokenId} {
      // Allow authenticated users to read/delete their own tokens
      // Used during account deletion to clean up FCM tokens
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Allow authenticated users to delete their own tokens
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
      
      // Allow public write for web app to register web FCM tokens
      // Application-level checks ensure proper access
      allow create, update: if true;
    }
    
    // ========================================
    // DEFAULT: DENY ALL OTHER ACCESS
    // ========================================
    match /{document=**} {
      allow read, write: if false;
    }

  }
}